@using Logic.Models
@{
    ViewData["Title"] = "Onderwijs";
}
@model Leerdoel
<div class="onderwijs-page">
    <h3>Leerdoel</h3>
    <div class="content">
        <table>
            <tr>
                <td>@Html.LabelFor(m => m.Naam)</td>
                <td>@Html.DisplayFor(m => m.Naam)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Beschrijving)</td>
                <td>@Html.DisplayTextFor(m => m.Beschrijving)</td>
            </tr>
        </table>
        <h6>Leeruitkomsten</h6>
        @Html.ActionLink("Nieuwe leeruitkomst toevoegen", "MaakLeeruitkomst", "Onderwijs", new { leerdoelId = Model.Id })
        <table>
            @foreach (var leeruitkomst in Model.Leeruitkomsten)
            {
                <tr>
                    <td>@leeruitkomst.Naam</td>
                    <td>@Html.ActionLink("Bekijk", "LeeruitkomstDetails", "Onderwijs", new { leeruitkomstId = leeruitkomst.Id })</td>
                    <td>@Html.ActionLink("Wijzig", "WijzigLeeruitkomst", "Onderwijs", new { leeruitkomstId = leeruitkomst.Id })</td>
                    <td>@(leeruitkomst.Haslessen() ? "Gedekt door lessen" : "Niet gedekt door lessen")</td>
                    <td>@(leeruitkomst.HasTentamens() ? "Gedekt door tentamens" : "Niet gedekt door tentamens")</td>
                </tr>
            }
        </table>
    </div>
</div>