@using Logic.Models
@{
    ViewData["Title"] = "Onderwijs";
}
@model Leerdoel
<div class="onderwijs-page">
    <h3>Leerdoel</h3>
    <div class="content">
        @using (Html.BeginForm("MaakLeerdoel", "Onderwijs"))
        {
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.Beschrijving)</td>
                    <td>@Html.EditorFor(m => m.Beschrijving)</td>
                </tr>
            </table>
            @Html.HiddenFor(m => m.OnderwijseenheidId)
            <button class="btn btn-primary">Maak</button>
        }
    </div>
</div>