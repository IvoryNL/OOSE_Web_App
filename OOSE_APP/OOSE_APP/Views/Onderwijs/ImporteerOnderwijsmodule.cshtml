@using Presentation.ViewModels.Onderwijs;
@{
    ViewData["Title"] = "Onderwijs";
}
@model ImporteerOnderwijsmoduleViewModel
<div class="onderwijs-page">
    <h3>Importeer onderwijsmodule</h3>
    <div class="content">
        @Html.ValidationSummary(true)
        @Html.ValidationMessage("all")
        @using (Html.BeginForm("ImporteerOnderwijsmodule", "Onderwijs", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table>
                <tr>
                    <td>@Html.Label("Bestand")</td>
                    <td><input type="file" name="file"/></td>
                </tr>
            </table>
            @Html.HiddenFor(m => m.OpleidingId)
            <button class="btn btn-primary">Importeer</button>
        }
    </div>
</div>