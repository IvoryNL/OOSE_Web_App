@using Presentation.ViewModels.Lessen;
@model LessenViewModel

<div class="lessen-page">
    <h3>Voeg leeruitkomst toe</h3>
    <div class="content">
        @using (Html.BeginForm("KoppelLesmateriaalAanLes", "Lessen"))
        {
            <table>
                
                <tr>
                    <td>@Html.Label("Leeruitkomsten"):</td>
                    <td>
                        @Html.DropDownListFor(m => m.GeselecteerdeLesmateriaalId,
                        Model.Lesmaterialen.Select(m => new SelectListItem
                        {
                            Value = m.Id.ToString(),
                            Text = m.Naam
                        }))
                    </td>
                </tr>
            </table>
            @Html.HiddenFor(m => m.LesId);
            @Html.HiddenFor(m => m.GeselecteerdeLesmateriaalId)
            <button class="btn btn-primary">Voeg toe</button>
        }
    </div>
</div>