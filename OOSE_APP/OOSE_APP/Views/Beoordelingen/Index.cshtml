@using Logic.Models;
@{
    ViewData["Title"] = "Beoordelingen";
}
@model List<Opleiding>
<div class="beoordelingen-page">
    <h3>Opleidingoverzicht</h3>
    <div class="content">
        <table>
            @foreach (var opleiding in Model)
            {
                <tr>
                    <td>@opleiding.Naam</td>
                    <td>@Html.ActionLink("Klassen", "KlassenOverzicht", "Beoordelingen", new { opleidingId = opleiding.Id })</td>
                </tr>
            }
        </table>
    </div>
</div>

